// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuarios {
  id         String    @id
  slug       String    @unique
  nome       String
  email      String    @unique
  senha      String
  vagas_id   String?
  created_at DateTime?
  updated_at DateTime?
  Vagas      Vagas[]

  @@index([slug])
}

model Vagas {
  id         String       @id
  slug       String       @unique
  titulo     String
  descricao  String
  objetivos  String
  usuario    Usuarios     @relation(fields: [usuariosId], references: [id])
  candidatos Candidatos[]
  created_at DateTime?
  updated_at DateTime?
  usuariosId String

  @@index([slug])
}

model Candidatos {
  id         String    @id
  slug       String    @unique
  nome       String
  email      String
  tel        String
  vagas      Vagas[]
  vagas_id   String?
  created_at DateTime?
  updated_at DateTime?

  @@index([slug])
}
